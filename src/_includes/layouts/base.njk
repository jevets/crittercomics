<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>
    {% block title %}{{ title }}{% endblock %}
  </title>
  {% block styles %}
    <link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet.css">
  {% endblock %}

  {% block meta %}
  {% endblock %}

  {% block icons %}
    {% include "layouts/_icons.njk" %}
  {% endblock %}
</head>
<body class="bg-gray-200">
  <header class="site-header py-4 text-center">
    <div class="container">
      <a href="/" class="site-title text-sm hover:text-teal-700">Critter Comics</a>
    </div>
  </header>
  <main class="site-main">
    <div class="container">
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </div>
  </main>
  <footer class="site-footer py-16 text-center text-sm text-gray-600">
    <div class="container">
      <p class="text-sm">&copy; {{ site.copyrightDate }} Michelle Jamesson</p>
    </div>
  </footer>
</body>
</html>
