---
title: Critter Comics
layout: layouts/base.njk
---

<div class="comics-list md:flex md:flex-wrap md:-mx-2">
  {% for comic in comics %}
    <div class="md:w-1/2 px-2 mb-4">
      {% set comicTitle = comic.title %}
      {% set comicUrl %}{{ urlTo.comic(comic.slug.current) }}{% endset %}
      {% set comicThumbnail = urlTo.sanityImage(comic.poster).width(520).sharpen(40).url() %}
      {% include "components/comic-list-item.njk" %}
    </div>
  {% endfor %}
</div>
